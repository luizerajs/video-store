{
  "name": "api",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "type": "commonjs",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/node": "^16.11.10",
    "nodemon": "^3.1.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "joi": "^17.13.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "0.3.20"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf dist && tsc",
    "start:prod": "ts-node src/server.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "ts-node ./src/config/scripts/generate-migration.ts",
    "migration:run": "yarn run typeorm -d ./src/config/datasource/datasource.config.ts migration:run",
    "migration:revert": "yarn run typeorm -d ./src/config/datasource/datasource.config.ts migration:revert"
  }
}
